<body style="background-image:url(../images/index/background_img.png); background-color: #34495e">

<ul id="ui">
    <!--<img src="../public/images/fluigi/"-->

    <div class="btn-group" role="group" style="padding-left: 10px; padding-top: 150px;">
        <li>
            <button class="btn btn-default" id="begin-comm"> Open Comm</button>
        </li>
        <li>
            <button class="btn btn-default" id="end-comm"> Close Comm</button>
        </li>
    </div>

    <li id="port-list">
        <br/>
        <label for="ports" style="color:white">Serial Ports Available</label>
        <select id="ports">
            {{#each serialPorts}} <!-- // Note the reference to the customers object​-->

                <option value={{this.comName}}> name: {{ this.comName }} </option>​

            {{/each}}
        </select>
    </li>
    <label style="color:white; font-size:15px"><br/><br/>*Reload page to display ports </label>
